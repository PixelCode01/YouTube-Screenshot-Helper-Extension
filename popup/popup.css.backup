/* Popup styles for YouTube Screenshot Helper */

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background: #f8f9fa !important;
  color: #333333 !important;
  line-height: 1.5;
  width: 380px;
  min-height: 500px;
}

/* CRITICAL: Force text visibility - override ALL styles */
*, *::before, *::after {
  color: inherit !important;
}

/* EMERGENCY: Force specific text colors */
body, 
.popup-content,
.popup-content *:not(.popup-header):not(.popup-header *):not(.action-btn.primary):not(.action-btn.primary *) {
  color: #333333 !important;
}

/* Ensure proper text visibility */
.popup-content {
  color: #333333 !important;
}

.popup-content h3,
.popup-content h4,
.popup-content label,
.popup-content span,
.popup-content .detail-label,
.popup-content .detail-value,
.popup-content .site-text,
.popup-content .shortcut-desc {
  color: #333333 !important;
}

/* Header text stays white */
.popup-header,
.popup-header * {
  color: #ffffff !important;
}

/* Button text */
.action-btn span {
  color: inherit !important;
}

.action-btn.primary span {
  color: #ffffff !important;
}

.action-btn.secondary span {
  color: #333333 !important;
}

/* Footer text */
.popup-footer .link-btn {
  color: #2196f3 !important;
}

.popup-footer .version {
  color: #999999 !important;
}

.popup-container {
  background: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

/* Header */
.popup-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 20px;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo {
  display: flex;
  align-items: center;
  gap: 10px;
}

.logo svg {
  fill: white;
}

.logo h1 {
  font-size: 18px;
  font-weight: 600;
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 12px;
  opacity: 0.9;
}

.status-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #ffc107;
  animation: pulse 2s infinite;
}

.status-dot.active {
  background: #4caf50;
  animation: none;
}

.status-dot.inactive {
  background: #f44336;
  animation: none;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* Main content */
.popup-content {
  padding: 20px;
}

.quick-actions {
  display: flex;
  gap: 10px;
  margin-bottom: 24px;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 12px 16px;
  border: none;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  text-decoration: none;
}

.action-btn.primary {
  background: #2196f3 !important;
  color: #ffffff !important;
}

.action-btn.primary:hover {
  background: #1976d2 !important;
  color: #ffffff !important;
  transform: translateY(-1px);
}

.action-btn.secondary {
  background: #f5f5f5 !important;
  color: #333333 !important;
  border: 1px solid #e0e0e0;
}

.action-btn.secondary:hover {
  background: #eeeeee !important;
  color: #333333 !important;
}

.action-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

/* Page info section */
.current-page-info {
  background: #f8f9fa;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 20px;
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.info-header h3 {
  font-size: 14px;
  font-weight: 600;
  color: #333333 !important;
}

.site-status {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 12px;
}

.site-indicator {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: #4caf50;
}

.site-indicator.unsupported {
  background: #f44336;
}

.site-text {
  color: #666666 !important;
}

.page-details {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  font-size: 13px;
}

.detail-label {
  color: #666;
  font-weight: 500;
}

.detail-value {
  color: #333;
}

/* Quick settings */
.quick-settings {
  margin-bottom: 20px;
}

.quick-settings h3 {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 12px;
  color: #333;
}

.setting-item {
  margin-bottom: 12px;
}

.setting-label {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 13px;
  cursor: pointer;
  color: #333;
}

.setting-label input[type="checkbox"] {
  display: none;
}

.checkmark {
  width: 16px;
  height: 16px;
  border: 2px solid #ddd;
  border-radius: 3px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.setting-label input[type="checkbox"]:checked + .checkmark {
  background: #2196f3;
  border-color: #2196f3;
}

.setting-label input[type="checkbox"]:checked + .checkmark::after {
  content: 'âœ“';
  color: white;
  font-size: 10px;
  font-weight: bold;
}

/* Shortcut info */
.shortcut-info h3 {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 8px;
  color: #333;
}

.shortcut-display {
  font-size: 13px;
  color: #666;
  text-align: center;
}

kbd {
  background: #f1f3f4;
  border: 1px solid #dadce0;
  border-radius: 4px;
  color: #3c4043;
  font-family: inherit;
  font-size: 11px;
  padding: 2px 6px;
  margin: 0 2px;
}

.shortcut-desc {
  display: block;
  margin-top: 4px;
  font-size: 12px;
}

/* Footer */
.popup-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 20px;
  background: #f8f9fa;
  border-top: 1px solid #e0e0e0;
}

.footer-links {
  display: flex;
  gap: 16px;
}

.link-btn {
  background: none;
  border: none;
  color: #2196f3 !important;
  font-size: 12px;
  cursor: pointer;
  text-decoration: none;
  padding: 4px;
}

.link-btn:hover {
  text-decoration: underline;
}

.version {
  font-size: 11px;
  color: #999999 !important;
}

/* Notification */
.notification {
  position: fixed;
  top: 20px;
  left: 20px;
  right: 20px;
  background: #333;
  color: white;
  padding: 12px 16px;
  border-radius: 6px;
  font-size: 13px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 1000;
  animation: slideDown 0.3s ease;
}

.notification.success {
  background: #4caf50;
}

.notification.error {
  background: #f44336;
}

.notification-close {
  background: none;
  border: none;
  color: white;
  font-size: 16px;
  cursor: pointer;
  padding: 0;
  margin-left: 10px;
}

@keyframes slideDown {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* Responsive adjustments */
@media (max-width: 400px) {
  body {
    width: 100vw;
  }
  
  .quick-actions {
    flex-direction: column;
  }
  
  .action-btn {
    width: 100%;
  }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  body {
    background: #1a1a1a !important;
    color: #e0e0e0 !important;
  }
  
  .popup-container {
    background: #2d2d2d;
  }
  
  .current-page-info {
    background: #383838;
  }
  
  .popup-footer {
    background: #383838;
    border-top-color: #555;
  }
  
  .action-btn.secondary {
    background: #404040;
    color: #e0e0e0;
    border-color: #555;
  }
  
  .checkmark {
    border-color: #666;
  }
  
  kbd {
    background: #404040;
    border-color: #666;
    color: #e0e0e0;
  }
  
  /* Ensure all text is visible in dark mode */
  .popup-content h3,
  .popup-content h4,
  .popup-content label,
  .popup-content span,
  .popup-content .detail-label,
  .popup-content .detail-value,
  .popup-content .site-text,
  .popup-content .shortcut-desc {
    color: #e0e0e0 !important;
  }
  
  .current-page-info h3 {
    color: #e0e0e0 !important;
  }

  .quick-settings h3 {
    color: #e0e0e0 !important;
  }

  .shortcut-info h3 {
    color: #e0e0e0 !important;
  }

  .setting-label {
    color: #e0e0e0 !important;
  }
  
  .detail-item .detail-label {
    color: #b0b0b0 !important;
  }

  .detail-item .detail-value {
    color: #e0e0e0 !important;
  }
  
  .site-text {
    color: #b0b0b0 !important;
  }
}

/* Additional text visibility fixes for popup */
.current-page-info h3 {
  color: #333333 !important;
}

.quick-settings h3 {
  color: #333333 !important;
}

.shortcut-info h3 {
  color: #333333 !important;
}

.setting-label {
  color: #333333 !important;
}

.info-content {
  color: #666666 !important;
}

.info-content .site-name {
  color: #333333 !important;
}

/* Ensure all detail values are visible */
.detail-item .detail-label {
  color: #666666 !important;
}

.detail-item .detail-value {
  color: #333333 !important;
}

/* Status indicators */
.status-text {
  color: inherit !important;
}

/* Notification text */
.notification-text {
  color: #ffffff !important;
}

/* Universal text visibility fixes - these rules override everything else */
html, body {
  color-scheme: light !important;
}

/* Force text visibility in all modes */
.popup-content *,
.current-page-info *,
.quick-settings *,
.shortcut-info * {
  color: inherit !important;
}

/* Specific element overrides for light mode */
@media (prefers-color-scheme: light), (prefers-color-scheme: no-preference) {
  body {
    background: #f8f9fa !important;
    color: #333333 !important;
  }
  
  .popup-content,
  .popup-content * {
    color: #333333 !important;
  }
  
  .detail-label,
  .site-text {
    color: #666666 !important;
  }
}

/* Fallback styles if color scheme detection fails */
body:not([data-theme="dark"]) {
  background: #f8f9fa !important;
  color: #333333 !important;
}

body:not([data-theme="dark"]) .popup-content,
body:not([data-theme="dark"]) .popup-content h3,
body:not([data-theme="dark"]) .popup-content h4,
body:not([data-theme="dark"]) .popup-content label,
body:not([data-theme="dark"]) .popup-content span {
  color: #333333 !important;
}

body:not([data-theme="dark"]) .detail-label,
body:not([data-theme="dark"]) .site-text {
  color: #666666 !important;
}

/* Emergency visibility fix - ensures no white text on white background */
.current-page-info h3,
.quick-settings h3,
.shortcut-info h3 {
  text-shadow: none !important;
  background: transparent !important;
}

/* High contrast mode overrides */
@media (prefers-contrast: high) {
  .popup-content * {
    color: #000000 !important;
  }
  
  .detail-label,
  .site-text {
    color: #444444 !important;
  }
}

/* ULTRA-AGGRESSIVE TEXT VISIBILITY FIXES */
/* These rules override ANY conflicting styles */

/* Force all text elements to be dark */
h1, h2, h3, h4, h5, h6,
p, span, div, label, a,
.detail-label, .detail-value,
.site-text, .shortcut-desc,
.setting-label {
  color: #000000 !important;
  text-shadow: none !important;
}

/* Force backgrounds to be light */
.popup-content,
.current-page-info,
.quick-settings,
.popup-container {
  background: #ffffff !important;
  color: #000000 !important;
}

/* Disable ALL color scheme preferences */
@media (prefers-color-scheme: dark) {
  /* Override dark mode completely */
  body, .popup-content, .current-page-info, .quick-settings {
    background: #ffffff !important;
    color: #000000 !important;
  }
  
  .popup-content h3,
  .popup-content h4,
  .popup-content label,
  .popup-content span,
  .popup-content .detail-label,
  .popup-content .detail-value,
  .popup-content .site-text,
  .popup-content .shortcut-desc {
    color: #000000 !important;
  }
}

/* Force light backgrounds and dark text */
* {
  background-color: transparent !important;
}

body {
  background: #ffffff !important;
}

.popup-container,
.popup-content,
.current-page-info,
.quick-settings {
  background: #ffffff !important;
}

/* Ultra-high specificity rules */
html body .popup-container .popup-content .current-page-info h3,
html body .popup-container .popup-content .current-page-info .detail-item .detail-label,
html body .popup-container .popup-content .current-page-info .detail-item .detail-value,
html body .popup-container .popup-content .quick-settings h3,
html body .popup-container .popup-content .quick-settings .setting-label {
  color: #000000 !important;
  background: transparent !important;
}
